<%=layout("layout/boilerplate.ejs") %>
<style>
  /* Base styles */
  .show-image {
    width: 100%;
    height: auto;
    max-height: 60vh;
    object-fit: cover;
    border-radius: 10px;
  }

  .listing-card {
    border: none;
    padding: 0;
    margin-bottom: 2rem;
  }

  .card-body {
    padding: 1.5rem 0;
  }

  .card-text {
    margin-bottom: 1rem;
    font-size: 1rem;
  }

  .btns {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    margin-bottom: 2rem;
  }

  .review {
    margin-top: 1.5rem;
    margin-bottom: 1rem;
  }

  .starability-slot {
    margin-bottom: 1.5rem;
  }

  /* Review cards */
  .review-card {
    margin-bottom: 1.5rem;
    border: 1px solid #eee;
    border-radius: 8px;
    padding: 1rem;
  }

  .starability-result {
    margin-bottom: 0.5rem;
  }

  /* Form styles */
  .needs-validation textarea {
    min-height: 120px;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .row > div {
      padding: 0 15px;
    }

    .col-8, .col-6 {
      width: 100% !important;
      max-width: 100% !important;
    }

    .offset-2, .offset-3 {
      margin-left: 0 !important;
    }

    .show-image {
      height: 50vh;
      border-radius: 0;
      margin-left: -15px;
      margin-right: -15px;
      width: calc(100% + 30px);
      max-width: calc(100% + 30px);
    }

    .listing-card {
      margin-top: 1rem;
    }

    .btns {
      flex-direction: column;
      gap: 0.5rem;
    }

    .btn {
      width: 100%;
    }

    /* Review cards mobile */
    .review-card {
      width: 100% !important;
      margin-left: 0 !important;
      margin-right: 0 !important;
    }

    /* Star rating */
    .starability-slot {
      transform: scale(0.9);
      transform-origin: left;
    }
  }

  /* Tablet responsiveness */
  @media (min-width: 769px) and (max-width: 992px) {
    .col-8 {
      width: 90% !important;
      max-width: 90% !important;
    }

    .offset-2 {
      margin-left: 5% !important;
    }

    .show-image {
      height: 50vh;
    }
  }

 
</style>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="title">
      <%=listing.title%>
    </h3>
    <div class="card col-6 offset-2 listing-card">
      <img src="<%=listing.image.url%>" class="card-img-top show-image" alt="listing-img">
      <div class="card-body">
        <p class="card-text">
          <h3><i>Owned by: <%=listing.owner.username%></i></h3>
        </p>
        <p class="card-text">
          <%=listing.description%>
        </p>
        <p class="card-text">&#8377;<%=listing.price.toLocaleString("en-IN")%> / night</p>
        <p class="card-text">
          <%=listing.location%>
        </p>
        <p class="card-text">
          <%=listing.country%>
        </p>
      </div>
    </div>
    
    <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="btns offset-2">
        <a class="btn btn-dark edit" href="/listings/<%=listing._id%>/edit">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=Delete">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    <% } %>
  </div>

  <div class="col-8 offset-3 mb-3">
    <hr />
    <% if(currUser) { %>
      <h4 class="review">Leave a Review</h4>
      <form action="/listings/<%=listing._id%>/reviews" method="POST" class="needs-validation review" novalidate>
        <div class="mb-3 mt-3">
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating."/>
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea cols="30" rows="5" name="review[comment]" id="comment" class="form-control" required></textarea>
          <div class="invalid-feedback">
            Please add some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <hr>
    <% } %>

    <p class="review"><b>All Reviews</b></p>
    <div class="row">
      <% for(review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3 review-card">
          <div class="card-body">
            <h5 class="card-title">
              <%=review.author.username%>
            </h5>
            <p class="starability-result card-text" data-rating="<%=review.rating%>">
              Rated: <%=review.rating%> star<%=review.rating !== 1 ? 's' : ''%>
            </p>
            <p class="card-text ms-2">
              <%=review.comment%>
            </p>
          </div>
          <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
            <form class="mb-3 mt-2 ms-auto" method="POST"
              action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
              <button class="btn btn-danger">Delete</button>
            </form>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
  // Form validation
  (() => {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>